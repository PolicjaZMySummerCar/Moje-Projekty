#include <iostream>

using namespace std;

int uczniowie, cukierki,x,y;

int main()
{
    cout << "Ilu ucznow jest w twojej klasie:";
    cin >> uczniowie;

    cout << "Ile cukierkow kupila twojaj mama?:";
    cin >> cukierki;
    x = cukierki/(uczniowie-1);

    cout << "Cukierkow dla kazdego ucznia:"<<x;
    y=cukierki-x*(uczniowie-1);
    cout <<endl<<"Cukierkow dla jasia:"<<y;
    return 0;
}
